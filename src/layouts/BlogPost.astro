---
import Layout from './Layout.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description } = Astro.props;
---

<Layout title={title}>
	<main>
		<article>
			<h1 class="title">{title}</h1>
			{description && <p class="description">{description}</p>}
			<hr />
			<div class="prose">
				<slot />
			</div>
		</article>
	</main>
</Layout>

<style>
	main {
		width: calc(100% - 2em);
		max-width: 100%;
		margin: 0;
	}
	article {
		width: 720px;
		max-width: calc(100% - 2em);
		margin: auto;
		padding: 1em;
		color: white;
	}
	.title {
		margin-bottom: 0.1em;
		font-size: 2.5em;
		color: rgb(var(--accent));
	}
	.description {
		color: rgb(var(--accent-light));
	}
	hr {
		border-top: 1px solid rgba(var(--accent-light), 0.2);
		margin: 1rem 0;
	}
</style>
